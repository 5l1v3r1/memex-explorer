{% for container in containers %}
{{ container.slug }}:
    {% if container.image %}
    image: {{ container.image }}
    {% else %}
    build: {{ container.build }}
    {% endif %}
    command: {{ container.app.command }}
    {% if container.app.volumes %}
    volumes:
    {% for volume in container.volumes %}
      - {{ volume.located_at }}:{{ volume.mounted_at }}
    {% endfor %}
    {% endif %}
    {% if container.ports %}
    ports:
    {% for port in container.app.ports %}
      - "{{ port }}"
    {% endfor %}
    {% endif %}
    {% if container.links %}
    links:
    {% for link in container.links %}
      - {{ link.to_app__name }}:{{ link.alias }}
    {% endfor %}
    {% endif %}
    {% if container.environment_variables %}
    environment:
    {% for var in container.environment_variables %}
      - {{ var.name }}={{ var.value}}
    {% endfor %}
    {% endif %}
{% endfor %}
